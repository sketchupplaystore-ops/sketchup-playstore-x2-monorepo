*.ts   text eol=lf
*.tsx  text eol=lf
*.mjs  text eol=lf
*.cjs  text eol=lf
*.json text eol=lf
*.css  text eol=lf
*.md   text eol=lf
*.yml  text eol=lf
*.yaml text eol=lf
*.sh   text eol=lf

# keep binaries as-is
*.png binary
*.jpg binary
